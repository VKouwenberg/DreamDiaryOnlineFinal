@model IEnumerable<MvcDream.Models.DreamViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DreamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DreamText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadableBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DreamerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DreamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DreamText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadableBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DreamerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
