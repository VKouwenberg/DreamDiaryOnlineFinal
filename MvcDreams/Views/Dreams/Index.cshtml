@model MvcDreams.Models.DreamTagViewModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

<form asp-controller="Dreams" asp-action="Index" method="get">
	<p>
		@* <select asp-for="DreamTag" asp-items="Model.Tags">
			<option value="">All</option>
		</select> *@

		Title: <input type="text" asp-for="SearchString" />
		<input type="submit" value="Filter" />
	</p>
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Dreams![0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Dreams![0].ReadableBy)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Dreams![0].DreamText)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Dreams!)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ReadableBy)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DreamText)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
